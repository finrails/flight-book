<!DOCTYPE html>
<html>
  <head>
    <title>FlightBooker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>

    <% if flash[:alert] %>
      <article class="message is-warning" data-controller="message">
        <div class="message-header">
          <p>Alert</p>
          <button class="delete" aria-label="delete" data-action="message#close"></button>
        </div>
        <div class="message-body">
          <%= flash[:alert] %>
        </div>
      </article>
    <% end %>

    <% if flash[:notice] %>
      <article class="message is-info" data-controller="message">
        <div class="message-header">
          <p>Information</p>
          <button class="delete" aria-label="delete" data-action="message#close"></button>
        </div>
        <div class="message-body">
          <%= flash[:notice] %>
        </div>
      </article>
    <% end %>
    <%= yield %>
  </body>
</html>
