<div class="hero is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column is-flex is-justify-content-center">
          <%= form_with url: root_path, method: :get, html: { class: 'box' } do |form| %>

            <div class="field-group p-1">
              <div class="field is-inline-block mr-4">
                <%= form.label :departure_airport, class: 'label' %>
                <div class="control">
                  <div class="select">
                    <%= form.collection_select :departure_airport, Airport.order(:city), :short_name, :city %>
                  </div>
                </div>
              </div>

              <div class="field is-inline-block">
                <%= form.label :arrival_airport, class: 'label' %>
                <div class="control">
                  <div class="select">
                    <%= form.collection_select :arrival_airport, Airport.order(:city), :short_name, :city %>
                  </div>
                </div>
              </div>
            </div>

            <div class="field-group p-1">
              <div class="field is-inline-block mr-4">
                <%= form.label :departure_time, class: 'label' %>
                <div class="control">
                  <div class="select">
                    <%= form.collection_select :departure_time, Flight.order(:id), :arrival_airport_id, :start_datetime  %>
                  </div>
                </div>
              </div>
              <div class="field is-inline-block ml-4">
                <%= form.label :passengers_number, class: 'label' %>
                <div class="control">
                  <div class="select">
                    <%= form.select :passengers_number, [ 1, 2, 3, 4 ] %>
                  </div>
                </div>
              </div>
            </div>

            <%= form.submit 'Search it', class: 'button is-primary m-1' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
